<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.Views.CategoryEditPage"
             Title="Caregory Edit">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="20">
                    <StackLayout Spacing="15">
                        <Label Text="Category Name" FontSize="16" TextColor="#333333"/>
                        <Entry x:Name="NameEntry" Text="{Binding Name}" Placeholder="Enter category name"/>
                    </StackLayout>
                </Frame>

                <Button Text="Save" Command="{Binding SaveCommand}" BackgroundColor="#6200EE" TextColor="White" CornerRadius="5"/>
                <Button Text="Delete" Command="{Binding DeleteCommand}" IsVisible="{Binding IsExisting}" BackgroundColor="#FF0000" TextColor="White" CornerRadius="5"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

